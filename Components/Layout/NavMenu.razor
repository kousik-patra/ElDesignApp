        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
    
    
    


    

  

    
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }
    
    private bool _isAdmin = false;
    private bool _hasChecked = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasChecked && AuthenticationStateTask != null)
        {
            _hasChecked = true;
            await CheckAdminStatus();
            StateHasChanged();
        }
    }

    private async Task CheckAdminStatus()
{
    try
    {
        var authState = await AuthenticationStateTask!;
        var user = authState.User;
        
        Console.WriteLine($"CheckAdminStatus - User authenticated: {user.Identity?.IsAuthenticated}");
        
        if (user.Identity?.IsAuthenticated == true)
        {
            var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            Console.WriteLine($"CheckAdminStatus - UserId: {userId}");
            
            if (!string.IsNullOrEmpty(userId))
            {
                // IMPORTANT: Ensure project is loaded first
                var currentProject = await ProjectContext.GetCurrentProjectAsync();
                Console.WriteLine($"CheckAdminStatus - Current Project: {currentProject?.Tag ?? "NULL"}");
                
                if (currentProject == null)
                {
                    // Load first available project
                    var projects = await ProjectContext.GetUserProjectsAsync(userId);
                    Console.WriteLine($"CheckAdminStatus - User has {projects.Count} projects");
                    
                    if (projects.Any())
                    {
                        await ProjectContext.SetCurrentProjectAsync(projects.First().UID);
                        currentProject = projects.First();
                        Console.WriteLine($"CheckAdminStatus - Set current project to: {currentProject.Tag}");
                    }
                }
                
                // Check 1: SuperAdmin or Admin role
                var isSuperAdmin = user.IsInRole("SuperAdmin");
                var isAdmin = user.IsInRole("Admin");
                
                Console.WriteLine($"CheckAdminStatus - IsSuperAdmin: {isSuperAdmin}, IsAdmin: {isAdmin}");
                
                if (isSuperAdmin || isAdmin)
                {
                    _isAdmin = true;
                    Console.WriteLine("CheckAdminStatus - User is SuperAdmin or Admin");
                    return;
                }

                // Check 2: Project Admin (with explicit project ID)
                Console.WriteLine("CheckAdminStatus - Checking IsProjectAdmin...");
                
                if (currentProject != null)
                {
                    // Direct check with explicit project ID
                    var isProjectAdmin = await ProjectContext.IsUserAdminInProjectAsync(userId, currentProject.UID);
                    Console.WriteLine($"CheckAdminStatus - IsProjectAdmin (explicit): {isProjectAdmin}");
                    
                    if (isProjectAdmin)
                    {
                        _isAdmin = true;
                        Console.WriteLine("CheckAdminStatus - User is Project Admin");
                        return;
                    }
                }
                else
                {
                    Console.WriteLine("CheckAdminStatus - No current project, cannot check IsProjectAdmin");
                }

                // Check 3: Custom role with Admin hard role
                Console.WriteLine("CheckAdminStatus - Checking custom roles...");
                var hardRoles = await ProjectContext.GetUserHardRolesInCurrentProjectAsync(userId);
                Console.WriteLine($"CheckAdminStatus - Hard roles: {string.Join(", ", hardRoles)}");
                
                if (hardRoles.Contains("Admin", StringComparer.OrdinalIgnoreCase))
                {
                    _isAdmin = true;
                    Console.WriteLine("CheckAdminStatus - User has Admin hard role");
                    return;
                }
                
                Console.WriteLine("CheckAdminStatus - User is NOT admin");
            }
        }
    }
    catch (Exception ex)
    {
        Console.WriteLine($"Error checking admin status: {ex.Message}");
        Console.WriteLine($"Stack trace: {ex.StackTrace}");
    }
}
    
    

@code {
    private string? currentUrl;
    private bool IconOnly { get; set; }

    private void ToggleSidebar()
    {
        IconOnly = !IconOnly;
    }
    
    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
    
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }
    
    // Computed authorization flags
    private bool _isAdmin = false;
    private bool _isUser = false;
    private bool _isReport = false;
    private bool _isGuest = false;
    private bool _hasChecked = false;
    private List<string> _hardRoles = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasChecked && AuthenticationStateTask != null)
        {
            _hasChecked = true;
            await CheckAuthorizationStatus();
            StateHasChanged();
        }
    }

    private async Task CheckAuthorizationStatus()
    {
        try
        {
            var authState = await AuthenticationStateTask!;
            var user = authState.User;
            
            Console.WriteLine($"=== CheckAuthorizationStatus START ===");
            Console.WriteLine($"User authenticated: {user.Identity?.IsAuthenticated}");
            
            if (user.Identity?.IsAuthenticated != true)
            {
                Console.WriteLine("User not authenticated, skipping checks");
                return;
            }

            var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            Console.WriteLine($"UserId: {userId}");
            
            if (string.IsNullOrEmpty(userId))
            {
                Console.WriteLine("UserId is null or empty");
                return;
            }

            // STEP 1: Ensure project is loaded
            var currentProject = await ProjectContext.GetCurrentProjectAsync();
            Console.WriteLine($"Current Project: {currentProject?.Tag ?? "NULL"}");
            
            if (currentProject == null)
            {
                var projects = await ProjectContext.GetUserProjectsAsync(userId);
                Console.WriteLine($"User has {projects.Count} projects");
                
                if (projects.Any())
                {
                    await ProjectContext.SetCurrentProjectAsync(projects.First().UID);
                    currentProject = projects.First();
                    Console.WriteLine($"Set current project to: {currentProject.Tag}");
                }
            }

            // STEP 2: Check Identity roles
            var isSuperAdmin = user.IsInRole("SuperAdmin");
            var isIdentityAdmin = user.IsInRole("Admin");
            
            Console.WriteLine($"Identity Roles - SuperAdmin: {isSuperAdmin}, Admin: {isIdentityAdmin}");

            // STEP 3: Get hard roles from custom role mappings
            if (currentProject != null)
            {
                _hardRoles = await ProjectContext.GetUserHardRolesInCurrentProjectAsync(userId);
                Console.WriteLine($"Hard roles from custom mappings: {string.Join(", ", _hardRoles)}");
            }

            // STEP 4: Check Project Admin flag
            bool isProjectAdmin = false;
            if (currentProject != null)
            {
                isProjectAdmin = await ProjectContext.IsUserAdminInProjectAsync(userId, currentProject.UID);
                Console.WriteLine($"IsProjectAdmin flag: {isProjectAdmin}");
            }

            // STEP 5: Compute authorization levels
            
            // Admin: SuperAdmin OR Identity Admin OR Project Admin OR has Admin hard role
            _isAdmin = isSuperAdmin || 
                      isIdentityAdmin || 
                      isProjectAdmin || 
                      _hardRoles.Contains("Admin", StringComparer.OrdinalIgnoreCase);
            
            Console.WriteLine($"Computed _isAdmin: {_isAdmin}");

            // User: Admin OR has User hard role
            _isUser = _isAdmin || 
                     _hardRoles.Contains("User", StringComparer.OrdinalIgnoreCase);
            
            Console.WriteLine($"Computed _isUser: {_isUser}");

            // Report: User OR has Report hard role
            _isReport = _isUser || 
                       _hardRoles.Contains("Report", StringComparer.OrdinalIgnoreCase);
            
            Console.WriteLine($"Computed _isReport: {_isReport}");

            // Guest: Report OR has Guest hard role OR has ANY hard role
            _isGuest = _isReport || 
                      _hardRoles.Contains("Guest", StringComparer.OrdinalIgnoreCase) ||
                      _hardRoles.Any();
            
            Console.WriteLine($"Computed _isGuest: {_isGuest}");
            
            Console.WriteLine("=== CheckAuthorizationStatus END ===");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in CheckAuthorizationStatus: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }
}

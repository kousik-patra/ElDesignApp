        @*             Is SuperAdmin: @context.User.IsInRole("SuperAdmin")<br/> *@
        @*             Is Admin: @context.User.IsInRole("Admin")<br/> *@
        @*             Is User: @context.User.IsInRole("User")<br/> *@
        @*             Is Report: @context.User.IsInRole("Report")<br/> *@

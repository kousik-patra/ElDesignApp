@page "/"

@using ElDesignApp.Components
@using Microsoft.AspNetCore.Authorization

<PageTitle>Home - ElDesignApp</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-12">
                    <h2 class="mb-3">
                        <i class="bi bi-house-door me-2"></i>
                        Welcome, @context.User.Identity?.Name!
                    </h2>
                    
                    <!-- Project Selection Component -->
                    <ProjectSelector />
                    
                    <!-- Quick Links (Optional) -->
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-diagram-3 text-primary me-2"></i>
                                        Quick Actions
                                    </h5>
                                    <div class="list-group list-group-flush">
                                        <a href="/segment" class="list-group-item list-group-item-action">
                                            <i class="bi bi-plus-square me-2"></i> Segment
                                        </a>
                                        <a href="/loadList" class="list-group-item list-group-item-action">
                                            <i class="bi bi-envelope me-2"></i> Load List
                                        </a>
                                        <a href="/sld" class="list-group-item list-group-item-action">
                                            <i class="bi bi-diagram-3 me-2"></i> SLD
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="container mt-5">
            <div class="alert alert-info">
                <h4 class="alert-heading">
                    <i class="bi bi-info-circle me-2"></i>
                    Welcome to ElDesignApp
                </h4>
                <p>Please <a href="/Account/Login" class="alert-link">log in</a> to access your projects and start working.</p>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>



@code {
    [Parameter] public string SelectedProject { get; set; } = string.Empty;
    [Parameter] public string SelectedProjectName { get; set; } = string.Empty;

    private bool _showRoleMappingModal = false;
    private bool _showUserRoleAssignmentModal = false;

    private void OpenRoleMappingModal()
    {
        _showRoleMappingModal = true;
    }

    private void CloseRoleMappingModal()
    {
        _showRoleMappingModal = false;
        StateHasChanged();
    }

    private void OpenUserRoleAssignmentModal()
    {
        _showUserRoleAssignmentModal = true;
    }

    private void CloseUserRoleAssignmentModal()
    {
        _showUserRoleAssignmentModal = false;
        StateHasChanged();
    }

    private async Task OnAssignmentChanged()
    {
        // Refresh any data that depends on role assignments
        StateHasChanged();
    }
}
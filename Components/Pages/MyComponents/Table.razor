    private void AppendRecord()
    {
        Dictionary<string, PropertyInfo> propertyMap = typeof(T).GetProperties()
            .ToDictionary(p => p.Name.Trim(), p => p);
        HashSet<object> existingUIDs = new HashSet<object>();

        var uidProperty = propertyMap.TryGetValue("UID", out var prop) ? prop : null;
        List.ForEach(item =>
        {
            var uidValue = uidProperty.GetValue(item);
            existingUIDs.Add(uidValue);
        });

        var jsonSerializerOption = new JsonSerializerOptions { IncludeFields = true };

        _importedItemsFromExcel.ForEach(item =>
        {
            var uidValue = uidProperty.GetValue(item);
            // if the record does not exist
            if (!existingUIDs.Add(uidValue))
            {
                Debug.WriteLine($"Duplicate UID '{uidValue}'.");
            }
            else
            {
                List.Add(JsonSerializer.Deserialize<T>(JsonSerializer.Serialize(item, jsonSerializerOption), jsonSerializerOption));
                _iteratedList.Add(JsonSerializer.Deserialize<T>(JsonSerializer.Serialize(item, jsonSerializerOption), jsonSerializerOption));
            }
        });

        ResetMassages();
        SuccessMessage = $"{_importedItemsFromExcel.Count} Records appended.";
        DoPagination();
        StateHasChanged();
        _showInputFile = false;
    }

